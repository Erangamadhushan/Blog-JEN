---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Card from '../components/Card.astro';
---

<Layout title="Welcome to My Astro Site">
    <Header />
    <main>
        <section class="hero">
            <h1>Welcome to <span class="text-gradient">Astro</span></h1>
            <p class="instructions">
                This is a simple Astro project showcasing static site generation
                with component-based architecture.
            </p>
        </section>
        
        <section class="cards">
            <h2>Quick Links</h2>
            <ul role="list" class="link-card-grid">
                <Card
                    href="/about"
                    title="About"
                    body="Learn more about this project and Astro framework."
                />
                <Card
                    href="/blog/first-post"
                    title="First Blog Post"
                    body="Check out our first blog post to see Astro in action."
                />
                <Card
                    href="https://docs.astro.build/"
                    title="Documentation"
                    body="Learn how Astro works by reading the official documentation."
                />
                <Card
                    href="https://astro.build/integrations/"
                    title="Integrations"
                    body="Discover and add new integrations to your Astro project."
                />
            </ul>
        </section>
    </main>
    <Footer />
</Layout>

<style>
    main {
        margin: auto;
        padding: 1.5rem;
        max-width: 60ch;
        min-height: calc(100vh - 200px);
    }
    
    .hero {
        text-align: center;
        margin: 3rem 0;
    }
    
    h1 {
        font-size: 3rem;
        font-weight: 800;
        margin: 0;
    }
    
    .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }
    
    .instructions {
        line-height: 1.6;
        margin: 1rem 0;
        background: #f3f4f6;
        padding: 1rem;
        border-radius: 0.5rem;
    }
    
    .cards {
        margin: 3rem 0;
    }
    
    .cards h2 {
        text-align: center;
        margin-bottom: 2rem;
    }
    
    .link-card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
        gap: 1rem;
        padding: 0;
    }
    
    :root {
        --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
    }
</style>